    <uses-permission android:name="android.permission.INTERNET"></uses-permission>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainMenuActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ShowNewGameReleasesActivity"
            android:label="@string/title_activity_show_new_game_releases"></activity>
        <activity
            android:name=".ModifyGameListActivity"
            android:label="@string/title_activity_modify_game_list"></activity>
    </application>

</manifest>
